<body>
  <div class="container">
    <header>
      <h1>Welcome to Craigslist Buatan Malaysia!</h1>
    </header>
    <nav>
      <ul>
        <li><a href="#">Home</a></li>
        <li><a href="#">About</a></li>
        <li><a href="#">Contact Us</a></li>
      </ul>
      <br clear="all">
      <form action="/categories/<%= params[:c_id] %>" method="post">
        <input type="submit" value="New Post!">
        <br></br>
      </form>
    </nav>
    <div class="content">
      <h2>All Posts for <%= params[:c_desc] %></h2>
      <section>
        <!-- Somehow generate the categories from the table dynamically -->
        <ul>
          <% @posts.each do |p| %>
          <%   link = "/categories/#{p.category_id.to_s}/posts/#{p.id.to_s}" %>
               <li><a href=<%=link%>><%= p.title %></a></li>
          <% end %>
        </ul>
      </section>
      <section>

      </section>
    </div>
    <div class="footer">
      Copyright &copy; 2015 SuperDuo, Inc.
    </div>
  </div>
</body>
